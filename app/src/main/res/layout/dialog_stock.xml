<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_stock_id"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#232323"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"/>

            <Spinner
                android:id="@+id/categoria_edit_id"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textstyle"
                android:foregroundTint="@color/black"
                android:paddingBottom="1dp"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:layout_gravity="center">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/tv_marca_edit_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textstyle"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variedade"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/et_variedade_edit_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textstyle"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"/>

            <Spinner
                android:id="@+id/quantidade_edit_id"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:background="@drawable/textstyle"
                android:foregroundTint="@color/black"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:layout_gravity="center">

            </Spinner>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle5"
                android:src="@drawable/ic_check_black_24dp"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:background="@drawable/buttonstyle6"
                android:src="@drawable/ic_remove_black_24dp"
                android:padding="5dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>